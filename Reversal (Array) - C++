/* swaps values for an array*/

void swap1( int alpha[], int i, int j){
    int temp1 = alpha[i];
    alpha[i] = alpha[j];
    alpha[j] = temp1;
};

/* reverses the array in linear time*/

void reverse_array(int alpha[], int length){
    int i = 0;
    int j = length-1;
    while(i<j){
        swap1(alpha, i, j);
        i++;
        j--;
    };
};
